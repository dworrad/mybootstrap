<% include ../partials/header.html.ejs %>


    <div class="page-content">
      <div class="page-header">
        <h1>
          Login
          
        </h1>
      </div><!-- /.page-header -->

      <div class="row">

        <div class="col-xs-12">    
          <form action="/login" method="POST" class="form-horizontal">
            <div class="form-group">
              <label class="col-sm-3 control-label no-padding-right" for="email"> Email: </label>

              <div class="col-sm-9">
                <input type="text" id="email" name="email" placeholder="Email" class="col-xs-2">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label no-padding-right" for="password"> Password: </label>

              <div class="col-sm-9">
                <input type="password" id="password" name="password" placeholder="Password" class="col-xs-2">
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-3 control-label no-padding-right" for="password"></label>
              <div class="col-sm-9">
                <a href="/forgot">Forgot Password?</a>
              </div>
            </div>

            <div class="clearfix form-actions">
              <div class="col-md-offset-3 col-md-9">
                <button class="btn btn-info" type="submit">
                  <i class="icon-ok bigger-110"></i>
                  Login
                </button>

                &nbsp; &nbsp; &nbsp;
                <a class="btn" href="/">
                  <i class="icon-undo bigger-110"></i>
                  Cancel</a>
              </div>
            </div>

          </form>
        
        </div>
      </div>
    </div>





<script>
$(document).ready(function(){
  $("li#login a").addClass("active")
})
</script>

