<% include ../partials/header.html.ejs %>


    <div class="page-content">
      <div class="page-header">
        <h1>
          Reset Your Password
          
        </h1>
      </div><!-- /.page-header -->

      <div class="row">

        <div class="col-xs-12">    
          <form id="frmPassword" action="/forgot/reset" method="POST" class="form-horizontal">

            <div class="form-group">
              <label class="col-sm-3 control-label no-padding-right" for="email"> Password: </label>

              <div class="col-sm-9">
                <input type="password" id="password" name="password" class="col-xs-2">
              </div>
            </div>

              <div class="form-group">
                  <label class="col-sm-3 control-label no-padding-right" for="email"> Confirm Password: </label>

                  <div class="col-sm-9">
                      <input type="password" id="confirmpassword" name="confirmpassword" class="col-xs-2">
                  </div>
              </div>

              <input type="hidden" id="passwordresetkey" name="passwordresetkey" value="<%= passwordresetkey%>" class="col-xs-2">


              <div class="clearfix form-actions">
              <div class="col-md-offset-3 col-md-9">
                <button class="btn btn-info" type="submit">
                  <i class="icon-ok bigger-110"></i>
                  Reset Password
                </button>
              </div>
            </div>

          </form>
        
        </div>
      </div>
    </div>







