<div class="form-group">
    <label class="col-sm-3 control-label no-padding-right" for="login">New password: <span style="color:red;">*</span></label>
    <div class="col-sm-9">
      <input class="col-sm-2" id="password" type="password" name="password"/>
    </div>
</div>
<div class="form-group">
    <label class="col-sm-3 control-label no-padding-right" for="phone">Cofirm Password:  <span style="color:red;">*</span></label>
    <div class="col-sm-9">
      <input class="col-sm-2" id="confirmnewpassword" type="password" name="confirmnewpassword" />
    </div>
</div>


<script>
$(document).ready(function(){

	$("#frmPassword").submit(function(){
        clearerrormessages()

		var isvalid = true
		if($("#password").val().length == 0){
			isvalid = false
            flasherrormessage("Please enter a new password!","error")
		}

		if($("#confirmnewpassword").val().length == 0){
			isvalid = false
            flasherrormessage("Please enter a confirm your password!","error")
		}

        if($("#password").val().length <= 3){
            isvalid = false
            flasherrormessage("Password must be greater than 3 characters!","error")
        }

        if($("#password").val() != $("#confirmnewpassword").val()){
            isvalid = false
            flasherrormessage("Passwords do no match!","error")
        }

		return isvalid
	})
	
})
</script>